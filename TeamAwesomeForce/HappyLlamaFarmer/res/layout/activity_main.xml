<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/redLlama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/yellowLlama"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/yellowLlama"
        android:layout_marginTop="68dp"
        android:text="Red Llama" />

    <Button
        android:id="@+id/yellowLlama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/greenLlama"
        android:layout_centerHorizontal="true"
        android:text="Yellow Llama" />

    <Button
        android:id="@+id/blueLlama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/redLlama"
        android:layout_alignRight="@+id/redLlama"
        android:layout_below="@+id/redLlama"
        android:text="Blue Llama" />

    <Button
        android:id="@+id/greenLlama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/yellowLlama"
        android:layout_alignRight="@+id/blueLlama"
        android:layout_below="@+id/blueLlama"
        android:text="Green Llama" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="Pick Your Favorite Llama!"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>